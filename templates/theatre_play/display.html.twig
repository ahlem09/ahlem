{# templates/theatre_play/display.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Pièces de Théâtre{% endblock %}

{% block body %}
    <h1>Liste des Pièces de Théâtre (Triées par Titre)</h1>
    <table border="1" cellpadding="10" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title (Majuscule)</th>
                <th>Extrait Titre (Slice)</th>
                <th>Genre</th>
                <th>Duration</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for play in theatrePlaysByTitle %}
                <tr>
                    <td>{{ play.id }}</td>
                    <td>{{ play.title | upper }}</td>
                    <td>{{ play.title | slice(1, 2) }}</td>
                    <td>{{ play.genre }}</td>
                    <td>{{ play.duration }}</td>
                    <td>
                        <a href="{{ path('add_show', { 'theatrePlayId': play.id }) }}" style="margin-right: 10px;">Add Show</a>
                        <a href="{{ path('delete_theatre_play', { 'id': play.id }) }}" 
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette pièce de théâtre ?');">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Liste des Pièces de Théâtre (Triées par Durée)</h1>
    <table border="1" cellpadding="10" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title (Majuscule)</th>
                <th>Extrait Titre (Slice)</th>
                <th>Genre</th>
                <th>Duration</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for play in theatrePlaysByDuration %}
                <tr>
                    <td>{{ play.id }}</td>
                    <td>{{ play.title | upper }}</td>
                    <td>{{ play.title | slice(1, 2) }}</td>
                    <td>{{ play.genre }}</td>
                    <td>{{ play.duration }}</td>
                    <td>
                        <a href="{{ path('add_show', { 'theatrePlayId': play.id }) }}" style="margin-right: 10px;">Add Show</a>
                        <a href="{{ path('delete_theatre_play', { 'id': play.id }) }}" 
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette pièce de théâtre ?');">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if app.flashes('success') %}
        <div class="alert alert-success">
            {% for message in app.flashes('success') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endif %}

    {% if app.flashes('error') %}
        <div class="alert alert-danger">
            {% for message in app.flashes('error') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
